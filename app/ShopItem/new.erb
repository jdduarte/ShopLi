<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @shop_item.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @shop_item.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="shop_item[name]" class="fieldLabel">Name</label>
            <input type="text" id="shop_item[name]" name="shop_item[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="shop_item[category]" class="fieldLabel">Category</label>
            <input type="text" id="shop_item[category]" name="shop_item[category]" <%= placeholder("Category") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
